<% if @bout.present? %>
  <% if @bout.errors.any? %>
    <% @bout.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new bout
</h1>


<hr>

<form action="/create_bout" method="post">

  <div class="form-group">
    <label for="score_1">
      Score 1
    </label>

    <input type="text" id="score_1" name="score_1" class="form-control" value="<%= @bout.score_1 %>">
  </div>

  <div class="form-group">
    <label for="score_2">
      Score 2
    </label>

    <input type="text" id="score_2" name="score_2" class="form-control" value="<%= @bout.score_2 %>">
  </div>

  <div class="form-group">
    <label for="score_3">
      Score 3
    </label>

    <input type="text" id="score_3" name="score_3" class="form-control" value="<%= @bout.score_3 %>">
  </div>

  <div class="form-group">
    <label for="score_4">
      Score 4
    </label>

    <input type="text" id="score_4" name="score_4" class="form-control" value="<%= @bout.score_4 %>">
  </div>

  <div class="form-group">
    <label for="score_5">
      Score 5
    </label>

    <input type="text" id="score_5" name="score_5" class="form-control" value="<%= @bout.score_5 %>">
  </div>

  <div class="form-group">
    <label for="team_id">
      Team
    </label>

    <input type="text" id="team_id" name="team_id" class="form-control" value="<%= @bout.team_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create bout
  </button>
</form>

<hr>

<a href="/bouts">
  Go back
</a>
