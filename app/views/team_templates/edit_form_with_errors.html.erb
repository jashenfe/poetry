<% if @team.errors.any? %>
  <% @team.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit team #<%= @team.id %>
</h1>

<hr>

<form action="/update_team/<%= @team.id %>" method="post">

  <div class="form-group">
    <label for="bout_id">
      Bout
    </label>

    <input type="text" id="bout_id" name="bout_id" class="form-control" value="<%= @team.bout_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update team
  </button>
</form>

<hr>

<a href="/teams">
  Go back
</a>
