<% if @team.present? %>
  <% if @team.errors.any? %>
    <% @team.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new team
</h1>


<hr>

<form action="/create_team" method="post">

  <div class="form-group">
    <label for="bout_id">
      Bout
    </label>

    <input type="text" id="bout_id" name="bout_id" class="form-control" value="<%= @team.bout_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create team
  </button>
</form>

<hr>

<a href="/teams">
  Go back
</a>
