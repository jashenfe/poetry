<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All poets
    </h1>

    <a href="/poets/new" class="btn btn-block btn-outline-secondary">
      Add a new poet
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Team
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @poets.each do |poet| %>
      <tr>
        <!-- Display poet.id start -->
        <td>
          <%= poet.id %>
        </td>
        <!-- Display poet.id end -->

        <!-- Display poet.team_id start -->
        <td>
          <%= poet.team.bout_id %>
        </td>
        <!-- Display poet.team_id end -->

        <!-- Display poet.created_at start -->
        <td>
          <%= time_ago_in_words(poet.created_at) %> ago
        </td>
        <!-- Display poet.created_at end -->

        <!-- Display poet.updated_at start -->
        <td>
          <%= time_ago_in_words(poet.updated_at) %> ago
        </td>
        <!-- Display poet.updated_at end -->

        <td>
          <a href="/poets/<%= poet.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @poets, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
