<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All poets
    </h1>

    <a href="/poets/new" class="btn btn-block btn-outline-secondary">
      Add a new poet
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "poet_templates/poets_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Team
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @poets.each do |poet| %>
      <tr>
        <td>
          <%= poet.id %>
        </td>

        <td>
          <% if poet.team.present? %>
            <a href="/teams/<%= poet.team.id %>">
              <%= poet.team.bout_id %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(poet.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(poet.updated_at) %> ago
        </td>

        <td>
          <a href="/poets/<%= poet.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @poets, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
