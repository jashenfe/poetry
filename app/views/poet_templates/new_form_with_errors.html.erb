<% if @poet.present? %>
  <% if @poet.errors.any? %>
    <% @poet.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new poet
</h1>


<hr>

<form action="/create_poet" method="post">

  <div class="form-group">
    <label for="team_id">
      Team
    </label>

    <%= select_tag(:team_id, options_from_collection_for_select(Team.all, :id, :bout_id, @poet.team_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create poet
  </button>
</form>

<hr>

<a href="/poets">
  Go back
</a>
