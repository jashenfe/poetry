<h1>
  Edit school #<%= @school.id %>
</h1>

<hr>

<!-- Form school start -->
<form action="/update_school/<%= @school.id %>" method="post">
<!-- Form school end -->

  <!-- Label and input for team_id start -->
  <div class="form-group">
    <label for="team_id">
      Team
    </label>

    <!-- Input for team_id start -->
    <input type="text" id="team_id" name="team_id" class="form-control" value="<%= @school.team_id %>">
    <!-- Input for team_id end -->
  </div>
  <!-- Label and input for team_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update school
  </button>
</form>

<hr>

<a href="/schools">
  Go back
</a>
