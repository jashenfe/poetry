<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      School #<%= @school.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/schools" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/schools/<%= @school.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit school
        </a>
      </div>

      <div class="col">
        <a href="/delete_school/<%= @school.id %>" class="btn btn-block btn-outline-secondary">
          Delete school
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Team
      </dt>
      <dd>
        <% if @school.team.present? %>
          <a href="/teams/<%= @school.team_id %>">
            <%= @school.team.bout_id %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@school.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@school.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

