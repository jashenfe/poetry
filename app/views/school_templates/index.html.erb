<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Team
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @schools.each do |school| %>
      <tr>
        <!-- Display school.id start -->
        <td>
          <%= school.id %>
        </td>
        <!-- Display school.id end -->

        <!-- Display school.team_id start -->
        <td>
          <%= school.team.bout_id %>
        </td>
        <!-- Display school.team_id end -->

        <!-- Display school.created_at start -->
        <td>
          <%= time_ago_in_words(school.created_at) %> ago
        </td>
        <!-- Display school.created_at end -->

        <!-- Display school.updated_at start -->
        <td>
          <%= time_ago_in_words(school.updated_at) %> ago
        </td>
        <!-- Display school.updated_at end -->

        <td>
          <a href="/schools/<%= school.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
