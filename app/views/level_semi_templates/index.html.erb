<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All level semis
    </h1>

    <a href="/level_semis/new" class="btn btn-block btn-outline-secondary">
      Add a new level semi
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "level_semi_templates/level_semis_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @level_semis.each do |level_semi| %>
      <tr>
        <td>
          <%= level_semi.id %>
        </td>

        <td>
          <%= time_ago_in_words(level_semi.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(level_semi.updated_at) %> ago
        </td>

        <td>
          <a href="/level_semis/<%= level_semi.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @level_semis, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
