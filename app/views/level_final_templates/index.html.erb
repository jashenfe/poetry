<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All level finals
    </h1>

    <a href="/level_finals/new" class="btn btn-block btn-outline-secondary">
      Add a new level final
    </a>
  </div>
</div>

<!-- Ransack Code start -->

