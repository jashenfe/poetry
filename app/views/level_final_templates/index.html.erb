<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @level_finals.each do |level_final| %>
      <tr>
        <!-- Display level_final.id start -->
        <td>
          <%= level_final.id %>
        </td>
        <!-- Display level_final.id end -->

        <!-- Display level_final.created_at start -->
        <td>
          <%= time_ago_in_words(level_final.created_at) %> ago
        </td>
        <!-- Display level_final.created_at end -->

        <!-- Display level_final.updated_at start -->
        <td>
          <%= time_ago_in_words(level_final.updated_at) %> ago
        </td>
        <!-- Display level_final.updated_at end -->

        <td>
          <a href="/level_finals/<%= level_final.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @level_finals, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
